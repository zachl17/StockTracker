@page "/"

@inject IHttpClientFactory _clientFactory

@if (stockNews is null)
{
    <div class="h4">Loading...</div>
}
else
{
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Headline</th>
                <th>Source</th>
            </tr>
        </thead>
        <tbody>
            @foreach (StockModel stock in stockNews)
            {
            <tr>
                <td>@stock.Headline</td>
                <td>@stock.Source</td>
            </tr>
            }
        </tbody>
    </table>
}

@code{

    List<StockModel> stockNews;
    string errorString;

    protected override async Task OnInitializedAsync()
    {
        var request = new HttpRequestMessage(HttpMethod.Get,
            "https://sandbox.iexapis.com/stable/time-series/news/?token=Tpk_4059c0cbd9b94e0ab33019b5daf7d8ba");

        var client = _clientFactory.CreateClient();

        HttpResponseMessage response = await client.SendAsync(request);

        if (response.IsSuccessStatusCode)
        {
            stockNews = await response.Content.ReadFromJsonAsync<List<StockModel>>();
            errorString = null;


            //stock = Newtonsoft.Json.JsonConvert.DeserializeObject<StockModel>(response.ToString());

            //stock = await System.Text.Json.JsonSerializer.DeserializeAsync<StockModel>(contentStream);

        }
        else
        {
            errorString = $"Error: {response.ReasonPhrase}";
        }
    }
}